{
  "name": "vue-ssr-demo",
  "version": "0.0.0",
  "scripts": {
    "serve": "npm run build && firebase emulators:exec 'ts-node scripts/devServer' --only functions,hosting",
    "build": "npm run build:hosting && npm run build:functions",
    "build:hosting": "vite build --ssrManifest --outDir dist/client",
    "build:functions": "vite build --ssr functions/index.ts --outDir dist/server",
    "lint": "eslint . --ext .js,.ts,.vue --fix",
    "deploy": "firebase deploy --only functions,hosting",
    "shell": "npm run build && firebase functions:shell",
    "start": "npm run shell",
    "logs": "firebase functions:log"
  },
  "engines": {
    "node": "14"
  },
  "main": "dist/server/index.js",
  "dependencies": {
    "firebase-admin": "^9.6.0",
    "firebase-functions": "^3.11.0",
    "vue": "^3.0.5",
    "vue-router": "^4.0.5",
    "@vue/server-renderer": "^3.0.9",
    "compression": "^1.7.4"
  },
  "devDependencies": {
    "@types/compression": "^1.7.0",
    "@types/express": "^4.17.11",
    "@typescript-eslint/eslint-plugin": "^4.20.0",
    "@vitejs/plugin-vue": "^1.1.5",
    "@vue/compiler-sfc": "^3.0.5",
    "eslint": "^7.23.0",
    "eslint-config-standard-with-typescript": "^20.0.0",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-promise": "^4.3.1",
    "eslint-plugin-vue": "^7.8.0",
    "express": "^4.17.1",
    "ts-node": "^9.1.1",
    "typescript": "^4.1.3",
    "vite": "^2.1.3"
  }
}